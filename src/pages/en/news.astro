---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter(post => post.data.lang === 'en')
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="News & Updates" lang="en" description="Latest news and updates from Forest International School Paris">
  <!-- Hero Section -->
  <section class="relative py-16 lg:py-24 bg-gradient-to-br from-[#2d5a3d] to-[#1e3d29]">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <span class="inline-block px-4 py-2 bg-[#c9a962]/20 backdrop-blur-sm rounded-full text-[#c9a962] font-semibold text-sm mb-6 border border-[#c9a962]/30">News & Updates</span>
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">School News</h1>
        <p class="text-xl text-white/80 max-w-2xl mx-auto">
          Stay updated with the latest announcements, events, and stories from our school community.
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="py-16 lg:py-24 bg-[#faf8f5]">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      {posts.length === 0 ? (
        <div class="text-center py-16">
          <div class="w-20 h-20 bg-[#2d5a3d]/10 rounded-full mx-auto mb-6 flex items-center justify-center">
            <svg class="w-10 h-10 text-[#2d5a3d]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-[#1e3d29] mb-4">No posts yet</h2>
          <p class="text-gray-600">Check back soon for updates from our school!</p>
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => (
            <a href={`/en/news/${post.id.replace('en/', '')}`} class="group">
              <article class="bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 h-full flex flex-col">
                {post.data.image && (
                  <div class="aspect-video overflow-hidden">
                    <img
                      src={post.data.image}
                      alt={post.data.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    />
                  </div>
                )}
                <div class="p-6 flex-1 flex flex-col">
                  <div class="flex items-center gap-2 text-sm text-gray-500 mb-3">
                    <time datetime={post.data.date.toISOString()}>
                      {post.data.date.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                    {post.data.tags && post.data.tags.length > 0 && (
                      <>
                        <span>â€¢</span>
                        <span class="text-[#c9a962]">{post.data.tags[0]}</span>
                      </>
                    )}
                  </div>
                  <h2 class="text-xl font-bold text-[#1e3d29] mb-3 group-hover:text-[#2d5a3d] transition-colors">
                    {post.data.title}
                  </h2>
                  <p class="text-gray-600 mb-4 flex-1">{post.data.description}</p>
                  <span class="inline-flex items-center text-[#2d5a3d] font-semibold group-hover:gap-2 transition-all">
                    Read More
                    <svg class="w-5 h-5 ml-1 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                  </span>
                </div>
              </article>
            </a>
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- Subscribe CTA -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-[#1e3d29] mb-4">Stay Connected</h2>
      <p class="text-gray-600 text-lg mb-8">
        Follow us on social media for the latest updates and photos from our daily activities.
      </p>
      <a
        href="https://instagram.com/the_forestinternational_school"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-[#833AB4] via-[#FD1D1D] to-[#F77737] text-white font-bold rounded-full hover:opacity-90 transition-opacity shadow-lg"
      >
        <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
        </svg>
        Follow on Instagram
      </a>
    </div>
  </section>
</Layout>
