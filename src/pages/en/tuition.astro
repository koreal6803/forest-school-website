              <span class="text-gray-600 ml-1">/year</span>
            </div>
          </div>

        </div>

        <!-- SEN Support -->
        <div class="mt-8 bg-[#2d5a3d]/5 border border-[#2d5a3d]/15 rounded-2xl p-6 flex items-start gap-4">
          <div class="w-10 h-10 bg-[#6b8e7a] rounded-lg flex items-center justify-center shrink-0 mt-0.5">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
