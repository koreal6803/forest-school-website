---
import Layout from '../../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts
    .filter(post => post.data.lang === 'en')
    .map((post) => ({
      params: { slug: post.id.replace('en/', '') },
      props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Layout title={post.data.title} lang="en" description={post.data.description}>
  <!-- Hero Section -->
  <section class="relative py-16 lg:py-24">
    {post.data.image && (
      <div class="absolute inset-0">
        <img src={post.data.image} alt={post.data.title} class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-t from-[#1e3d29] via-[#1e3d29]/80 to-[#1e3d29]/60"></div>
      </div>
    )}
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <a href="/en/news" class="inline-flex items-center text-[#c9a962] hover:text-white mb-6 transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to News
      </a>
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">{post.data.title}</h1>
      <div class="flex items-center justify-center gap-4 text-white/80">
        <time datetime={post.data.date.toISOString()}>
          {post.data.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        <span>â€¢</span>
        <span>{post.data.author}</span>
      </div>
    </div>
  </section>

  <!-- Article Content -->
  <section class="py-12 lg:py-16 bg-white">
    <article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 prose prose-lg prose-green">
      <Content />
    </article>
  </section>

  <!-- Share & Back -->
  <section class="py-12 bg-[#faf8f5]">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <a href="/en/news" class="inline-flex items-center text-[#2d5a3d] font-semibold hover:text-[#1e3d29] transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Back to All News
        </a>
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {post.data.tags.map((tag: string) => (
              <span class="px-3 py-1 bg-[#2d5a3d]/10 text-[#2d5a3d] text-sm rounded-full">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>
    </div>
  </section>
</Layout>

<style is:global>
  .prose h2 {
    color: #1e3d29;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .prose h3 {
    color: #2d5a3d;
    font-weight: 700;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  .prose p {
    color: #4b5563;
    line-height: 1.75;
    margin-bottom: 1rem;
  }
  .prose ul {
    list-style-type: disc;
    list-style-position: inside;
    margin-bottom: 1rem;
  }
  .prose ul > * + * {
    margin-top: 0.5rem;
  }
  .prose li {
    color: #4b5563;
  }
  .prose strong {
    color: #1e3d29;
    font-weight: 600;
  }
  .prose a {
    color: #2d5a3d;
    text-decoration: underline;
  }
  .prose a:hover {
    color: #1e3d29;
  }
</style>
